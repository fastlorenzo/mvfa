<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:padding="6dip"
	android:gravity="center_vertical">

	<ImageView
		android:id="@+id/usage_logo"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
		android:layout_centerVertical="true"
		android:paddingRight="6dip" />

	<TextView
		android:id="@+id/usage_title"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_toRightOf="@id/usage_logo"
		android:textStyle="bold" />

	<TextView
		android:id="@+id/usage_date"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_toRightOf="@id/usage_logo"
		android:layout_below="@id/usage_title" />

	<TextView
		android:id="@+id/usage_cost"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentRight="true" />

	<TextView
		android:id="@+id/usage_duration"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentRight="true"
		android:layout_below="@id/usage_cost" />

</RelativeLayout>
